      <input
        type="text"
        name="lastname"
        id="lastname"
        placeholder="Digite seu sobrenome"
        required
      />
      <label for="email">Email</label>
      <input
        type="text"
        name="email"
        id="email"
        placeholder="Digite seu email"
        required
      />
