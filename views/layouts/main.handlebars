<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thoughts</title>
    <link rel="stylesheet" href="css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    {{!-- Nav Bar --}}
    {{#unless hideNavbar}}
    <nav>

      {{!-- Logo --}}
      <div class="logo">
        <img src="assets/logo.png" alt="" />
      </div>

      {{!-- Pages --}}
      <div class="pages">
        <a href="">Home</a>
        <a href="">Your Thoughts</a>
      </div>

      {{!-- Buttons --}}
      <div class="button-and-user">
        <button class="dark-light-button">
            <img class="light-mode" src="assets/light-mode.svg" alt="light-mode">
        </button>
        <button class="user-button">
            <img src="assets/person.svg" alt="user-icon">
        </button>

        {{#if user}}
      <div class="user-options">
        <h4>Ol√°, {{user.username}}</h4>
        <ul>
          <li><a href="/user/profile">Perfil</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
      {{/if}}

      </div>
    </nav>
    {{/unless}}
    {{{body}}}
  </body>
</html>